<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemPresenter"
            type="tv.utao.x5.LiveActivity.HzLiveBindPresenter" />

        <variable
            name="item"
            type="tv.utao.x5.domain.HzItem" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hzItem"
            android:textSize="@dimen/fontDefault"
            android:textColor="#FFFFFF"
            android:tag="hzItem"
            android:text='@{item.name}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button_background"
            android:focusable="true"
            android:padding="4dp"
            android:gravity="center"
            android:onClick='@{() -> itemPresenter.onClick(item)}' />
    </LinearLayout>
</layout>


